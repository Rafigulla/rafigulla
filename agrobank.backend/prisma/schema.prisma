// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model credit {
  id              Int @id @default(autoincrement()) 
  name            Json?
  info            Json? 
  term            String?
  icon            String?
  min_summa       String?
  max_summa       String?
  initial_fee     String?
  percentage      String?
  min_initial_fee String?
  type            String?
  step_title      Json?
  step_list       Json?
  conditions_file String?
  documents_file  String?
  creditInfo      creditInfo[]
}

model creditInfo {
  id         Int  @id @default(autoincrement())
  titles     Json?
  info       Json?
  creditId   Int 
  credit     credit    @relation(fields: [creditId], references: [id])
}

model message_list {
  id          Int @id @default(autoincrement())
  message     Json?
  lang        String?
}

model error_list {
  id            Int @id @default(autoincrement())
  error_message Json?
  module_name   String?
  error_code    Int @default(autoincrement())
}

model admins {
  id  Int @id @default(autoincrement())
  first_name String
  last_name String
  username String
  password String
  uuid String @unique
  role String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model settings {
  id Int @id @default(autoincrement())
  phone_numbers  Json
  social_media Json
}

model featured_ad {
  id Int @id @default(autoincrement())
  title Json
  description Json
  chips Json
  link Json
  color String
  bg_color String
}